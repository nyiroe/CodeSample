<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DefaultMargin" TargetType="FrameworkElement">
        <Setter Property="Margin" Value="5" />
    </Style>
    <Style x:Key="DefaultButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultMargin}">
        <Setter Property="Width" Value="75" />
        <Setter Property="Height" Value="20" />
    </Style>
    <Style x:Key="DefaultListBoxStyle" TargetType="ListBox" BasedOn="{StaticResource DefaultMargin}">
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    </Style>
</ResourceDictionary>
